#include <stdio.h>
#include <math.h>

int main() 
{ 
//declaracion de variables 
	float a, b, c, p, area;

//pedir datos 
	printf("ingresa a: ");
	scanf("%f", &a);
	printf("ingresa b: ");    
	scanf("%f", &b);
	printf("ingresa c: "); 
	scanf("%f", &c);
	
//procedimiento - Formula de Heron
	p = (a + b + c) / 2;
	area = sqrt(p * (p - a) * (p - b) * (p - c));

//resultados
	printf("El area del triangulo es: %f\n", area);

	return 0;
}